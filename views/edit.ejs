<% include ./partials/header.ejs  %>
<div class='ui main container text segment'>
    <div class="ui big header"> Edit <%= blog.title %>
    <form class="ui form" action='/blogs/<%= blog._id%>?_method=PUT' method='POST'>
  <div class="field">
    <label>Title</label>
    <input type="text" name="blog[title]" value="<%=blog.title%>">
  </div>
  <div class="field">
    <label>Image</label>
    <input type="text" name="blog[image]" value=<%=blog.image%>>
  </div>
  <div class="field">
    <div class="field">
      <label>Blog content</label>
      <textarea name='blog[body]' required><%=blog.body%></textarea>
    </div>
  </div>
  <button class="ui big button" type="submit">Submit</button>
</form>
</div>
</div>
